<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentToolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backBtnIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_back"
        android:visibility="gone" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/watcho_logo" />


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_search"
        android:id="@+id/ivSearch"
        android:tint="@color/light_grey"
        android:layout_marginEnd="@dimen/_10sdp"/>


    <ImageView
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bell_home"
        android:layout_toLeftOf="@+id/ivSearch"
        android:layout_marginEnd="@dimen/_10sdp"
        android:tint="@color/light_grey"
        android:id="@+id/ivNotification"/>


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_language_acc"
        android:layout_toLeftOf="@+id/ivNotification"
        android:layout_marginEnd="@dimen/_10sdp"
        android:tint="@color/light_grey"
        android:id="@+id/ivLang"/>


</RelativeLayout>